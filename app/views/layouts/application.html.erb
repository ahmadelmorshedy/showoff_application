<!DOCTYPE html>
<html>
  <head>
    <title>ShowoffApplication</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
    <div class='container-fluid'>
      <div class="header row">
        <div class="col-lg-1 col-md-1 col-xs-0"></div>
        <div class="col-lg-2 col-md-2 col-xs-12">
          <%= link_to (image_tag asset_path('showoff_logo.png'), class: 'logo'), "http://showoff.ie/" %>
        </div>
        <div class="col-lg-5 col-md-5 col-xs-0"></div>
        <div class="app_title col-lg-4 col-md-4 col-xs-12"><h2><%= t('instagram_browser') %></h2></div>
      </div>

      <div class="flash_messages">
        <%= render partial: 'layouts/flash_messages',locals: {flash: flash} %>
      </div>

      <%= yield %>  
    </div>
  </body>
</html>
